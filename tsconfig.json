{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "importsNotUsedAsValues": "error"
  },
  "typedocOptions": {
    "entryPoints": ["src"],
    "name": "BCMS | Client",
    "out": "doc"
  },
  "include": ["src"]
}
